<h1>Hello Northern Anglo Saxons! {{isAngry}}</h1>
{{#with model}}
<p>Your foreign speaker is <strong>{{fullName}}</strong> who is {{age}}.</p>
<p {{bind-attr class="isAngry:warn"}}>{{firstName}} is currently <label {{bind-attr class=":label isCalm:label-success:label-important"}}>{{mood}}</label>.</p>
<p>
{{#if isOld}}
  {{fullName}} is an old git!
{{else}}
  {{fullName}} is a noob!
{{/if}}
</p>
<hr/>
<form class="form-horizontal">
  <fieldset>
    <legend>Presenter Details</legend>
    <div class="control-group">
      <label class="control-label">First Name</label>
      <div class="controls">
        {{input value=firstName}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Surname</label>
      <div class="controls">
        {{input value=surname}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Age</label>
      <div class="controls">
        {{input value=age type="number"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Mood</label>
      <div class="controls">
        {{input value=mood}}
      </div>
    </div>
  </fieldset>
</form>
{{/with}}